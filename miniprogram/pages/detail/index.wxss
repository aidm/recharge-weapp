/* pages/detail/index.wxss */
page {
	background-color: #F6F6F6;
}

.navbar-title {
	font-size: 36rpx;
	font-family: PingFangSC, PingFang SC;
	font-weight: 500;
	color: #fff;
}

swiper {
	position: absolute;
	height: 100%;
	width: 100%;
}

.swiper-items {
	height: 100% !important;
	/* border-radius: 16rpx; */
	overflow: hidden;
}

.swiper-image {
	height: 80% !important;
	width: 100% !important;
	opacity: 0.9;
	/* border-radius: 8rpx; */
	position: relative;
	left: 0;
	top: 10%;
}

.button-img {
	position: relative;
	bottom: 120px;
	height: 40px;
	width: 120px;
	opacity: 0.6;
}

.swiper-wrapper {
	position: relative;
	height: 750rpx !important;
}

.swiper-wrapper .swiper {
	height: 750rpx;
}

.swiper-dots {
	position: absolute;
	bottom: 100rpx;
	left: 0;
	right: 0;
	display: flex;
	justify-content: center;
}

.swiper-item-dots {
	width: 16rpx;
	height: 16rpx;
	background: rgba(228, 228, 228, 0.3);
	/* border-radius: 8rpx; */
	margin-right: 8rpx;
}

.swiper-item-dots:last-of-type {
	margin-right: 0;
}

.swiper-item-dots.active {
	background: rgba(255, 255, 255, 0.6);
}

.swiper-image-margin {
	width: 95% !important;
	margin: 0 2.5%;
}

.swiper-image-nomargin {
	width: 100% !important;
	height: 100% !important;
	top: 0;
}

.swiper-items.active .swiper-image {
	height: 100% !important;
	top: 0;
	border-radius: 16rpx;
}

.goods-card {
	margin: 20rpx 20rpx 0;
	background: #FFFFFF;
	box-shadow: 4rpx 6rpx 12rpx 0px rgba(111, 111, 111, 0.06);
	border-radius: 16rpx;
	padding: 30rpx;
}

.price-box{
	box-sizing: border-box;
}
.goods-price, .unit{
	font-size: 46rpx;
	font-family: PingFang-SC, PingFang-SC;
	font-weight: bold;
	color: #C12931;
	line-height: 32rpx;
}
.goods-price .unit{
	font-size: 26rpx;
}
.num{
	color: #999999;
	font-size: 24rpx;
	text-decoration: line-through;
	margin-left: 30rpx;
	/* line-height: 45rpx; */
}
.flex-center{
	display: flex;
	align-items: flex-end;
}
.goods-title{
font-size: 32rpx;
font-family: PingFangSC, PingFang SC;
font-weight: 500;
color: #333333;
line-height: 45rpx;

}
.mt-23{
	margin-top: 23rpx;
}
.footer-btn{
	/* width: 100%; */
	height: 90rpx;
	background: #C12931;
	box-shadow: 0px 0px 26rpx 0px #FDE9E9;
	border-radius: 100rpx 96rpx 96rpx 100rpx;
	position: fixed;
	bottom: 46rpx;
	left: 0;
	right: 0;
	margin: 0 30rpx;
	font-size: 34rpx;
	font-family: PingFangSC, PingFang SC;
	font-weight: 500;
	color: #FFFFFF;
	display: flex;
	align-items: center;
	justify-content: center;
}